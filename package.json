{
  "name": "web-gpu-glyph",
  "author": "zavx0z",
  "module": "index.ts",
  "type": "module",
  "private": false,
  "version": "0.0.0",
  "devDependencies": {
    "@types/bun": "latest",
    "@webgpu/types": "^0.1.65",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "dev": "bun --hot ./server.ts",
    "collect": "bun run scripts/collect-files.ts",
    "collect:help": "bun run scripts/collect-files.ts --help",
    "collect:ai": "bun run scripts/collect-files.ts --files \"$(bun run scripts/project-files.ts ai)\" -o ai-documentation.md",
    "collect:source": "bun run scripts/collect-files.ts --files \"$(bun run scripts/project-files.ts source)\" -o source-code.md",
    "files:list": "bun run scripts/project-files.ts",
    "files:help": "bun run scripts/project-files.ts help",
    "patch": "git diff --staged > staged_changes.patch"
  }
}
